
import java.io.*;
import java.util.*;
import java.lang.*;

class Main 
{
	public static void main (String[] args) throws IOException
	{
		Scanner in=new Scanner(System.in);
		int t=in.nextInt();
		while(t-->0)
		{
		    int n=in.nextInt();
		    long a[]=new long[3];
		    long sum,tot=0;
		    while(n-->0)
		    {
		        sum=0;
		        for(int i=0;i<3;i++)
		            a[i]=in.nextLong();
	            sum=a[0]*a[2];
	            tot=tot+sum;
	            
		    }
		    System.out.println(tot);
		}
	}
}
